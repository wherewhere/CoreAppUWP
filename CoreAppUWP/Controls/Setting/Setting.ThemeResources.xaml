                                            <wuxma:DoubleAnimationUsingKeyFrames wuxma:Storyboard.TargetName="SwitchKnobBounds" wuxma:Storyboard.TargetProperty="Opacity">
                                                <wuxma:LinearDoubleKeyFrame KeyTime="{StaticResource ControlFasterAnimationDuration}" Value="1" />
                                            </wuxma:DoubleAnimationUsingKeyFrames>
                                            <wuxma:DoubleAnimationUsingKeyFrames wuxma:Storyboard.TargetName="OuterBorder" wuxma:Storyboard.TargetProperty="Opacity">
