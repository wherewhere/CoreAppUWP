<wux:ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CoreAppUWP.Controls"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:triggers="using:CoreAppUWP.Helpers.Triggers"
    xmlns:wux="using:Windows.UI.Xaml"
    xmlns:wuxa="using:Windows.UI.Xaml.Automation"
    xmlns:wuxc="using:Windows.UI.Xaml.Controls"
    xmlns:wuxcp="using:Windows.UI.Xaml.Controls.Primitives"
    xmlns:wuxm="using:Windows.UI.Xaml.Media"
    xmlns:wuxma="using:Windows.UI.Xaml.Media.Animation" xmlns:wuxs="using:Windows.UI.Xaml.Shapes">
    <wux:ResourceDictionary.ThemeDictionaries>
        <wux:ResourceDictionary x:Key="Default">
            <StaticResource x:Key="SettingCardBackground" ResourceKey="CardBackgroundFillColorDefaultBrush" />
            <StaticResource x:Key="SettingCardBackgroundPointerOver" ResourceKey="ControlFillColorSecondaryBrush" />
            <StaticResource x:Key="SettingCardBackgroundPressed" ResourceKey="ControlFillColorTertiaryBrush" />
            <StaticResource x:Key="SettingCardBackgroundDisabled" ResourceKey="ControlFillColorDisabledBrush" />

            <StaticResource x:Key="SettingCardForeground" ResourceKey="TextFillColorPrimaryBrush" />
            <StaticResource x:Key="SettingCardForegroundPointerOver" ResourceKey="TextFillColorPrimaryBrush" />
            <StaticResource x:Key="SettingCardForegroundPressed" ResourceKey="TextFillColorSecondaryBrush" />
            <StaticResource x:Key="SettingCardForegroundDisabled" ResourceKey="TextFillColorDisabledBrush" />

            <StaticResource x:Key="SettingCardBorderBrush" ResourceKey="CardStrokeColorDefaultBrush" />
            <StaticResource x:Key="SettingCardBorderBrushPointerOver" ResourceKey="ControlElevationBorderBrush" />
            <StaticResource x:Key="SettingCardBorderBrushPressed" ResourceKey="ControlStrokeColorDefaultBrush" />
            <StaticResource x:Key="SettingCardBorderBrushDisabled" ResourceKey="ControlStrokeColorDefaultBrush" />

            <StaticResource x:Key="ListViewItemSelectionIndicatorBrush" ResourceKey="AccentFillColorDefaultBrush" />
        </wux:ResourceDictionary>

        <wux:ResourceDictionary x:Key="Light">
            <StaticResource x:Key="SettingCardBackground" ResourceKey="CardBackgroundFillColorDefaultBrush" />
            <StaticResource x:Key="SettingCardBackgroundPointerOver" ResourceKey="ControlFillColorSecondaryBrush" />
            <StaticResource x:Key="SettingCardBackgroundPressed" ResourceKey="ControlFillColorTertiaryBrush" />
            <StaticResource x:Key="SettingCardBackgroundDisabled" ResourceKey="ControlFillColorDisabledBrush" />

            <StaticResource x:Key="SettingCardForeground" ResourceKey="TextFillColorPrimaryBrush" />
            <StaticResource x:Key="SettingCardForegroundPointerOver" ResourceKey="TextFillColorPrimaryBrush" />
            <StaticResource x:Key="SettingCardForegroundPressed" ResourceKey="TextFillColorSecondaryBrush" />
            <StaticResource x:Key="SettingCardForegroundDisabled" ResourceKey="TextFillColorDisabledBrush" />

            <StaticResource x:Key="SettingCardBorderBrush" ResourceKey="CardStrokeColorDefaultBrush" />
            <StaticResource x:Key="SettingCardBorderBrushPointerOver" ResourceKey="ControlElevationBorderBrush" />
            <StaticResource x:Key="SettingCardBorderBrushPressed" ResourceKey="ControlStrokeColorDefaultBrush" />
            <StaticResource x:Key="SettingCardBorderBrushDisabled" ResourceKey="ControlStrokeColorDefaultBrush" />

            <StaticResource x:Key="ListViewItemSelectionIndicatorBrush" ResourceKey="AccentFillColorDefaultBrush" />
        </wux:ResourceDictionary>

        <wux:ResourceDictionary x:Key="HighContrast">
            <StaticResource x:Key="SettingCardBackground" ResourceKey="SystemColorButtonFaceColorBrush" />
            <StaticResource x:Key="SettingCardBackgroundPointerOver" ResourceKey="SystemColorHighlightTextColorBrush" />
            <StaticResource x:Key="SettingCardBackgroundPressed" ResourceKey="SystemColorHighlightTextColorBrush" />
            <StaticResource x:Key="SettingCardBackgroundDisabled" ResourceKey="SystemControlBackgroundBaseLowBrush" />

            <StaticResource x:Key="SettingCardForeground" ResourceKey="SystemColorButtonTextColorBrush" />
            <StaticResource x:Key="SettingCardForegroundPointerOver" ResourceKey="SystemColorHighlightColorBrush" />
            <StaticResource x:Key="SettingCardForegroundPressed" ResourceKey="SystemColorHighlightTextColorBrush" />
            <StaticResource x:Key="SettingCardForegroundDisabled" ResourceKey="SystemControlDisabledBaseMediumLowBrush" />

            <StaticResource x:Key="SettingCardBorderBrush" ResourceKey="SystemColorButtonTextColorBrush" />
            <StaticResource x:Key="SettingCardBorderBrushPointerOver" ResourceKey="SystemColorHighlightColorBrush" />
            <StaticResource x:Key="SettingCardBorderBrushPressed" ResourceKey="SystemColorHighlightTextColorBrush" />
            <StaticResource x:Key="SettingCardBorderBrushDisabled" ResourceKey="SystemControlDisabledTransparentBrush" />

            <wuxm:SolidColorBrush x:Key="ListViewItemSelectionIndicatorBrush" Color="{ThemeResource SystemColorHighlightTextColor}" />
        </wux:ResourceDictionary>

    </wux:ResourceDictionary.ThemeDictionaries>

    <wux:Thickness x:Key="SettingCardBorderThickness">1</wux:Thickness>
    <wux:Thickness x:Key="SettingCardPadding">16,16,16,16</wux:Thickness>
    <wux:Thickness x:Key="SettingCardIconMargin">2,0,18,0</wux:Thickness>
    <x:Double x:Key="SettingCardMinWidth">148</x:Double>
    <x:Double x:Key="SettingCardMinHeight">32</x:Double>
    <x:Double x:Key="SettingCardActionButtonWidth">32</x:Double>
    <x:Double x:Key="SettingCardActionButtonHeight">32</x:Double>
    <x:Double x:Key="SettingCardDescriptionFontSize">12</x:Double>
    <x:Double x:Key="SettingCardHeaderIconMaxSize">20</x:Double>
    <x:Double x:Key="SettingCardActionIconMaxSize">13</x:Double>
    <x:Double x:Key="SettingCardLeftIndention">0</x:Double>
    <x:Double x:Key="SettingCardContentMinWidth">240</x:Double>
    <wux:Thickness x:Key="SettingCardHeaderIconMargin">2,0,20,0</wux:Thickness>
    <wux:Thickness x:Key="SettingCardVerticalHeaderContentSpacing">0,8,0,0</wux:Thickness>
    <x:Double x:Key="SettingCardWrapThreshold">476</x:Double>
    <x:Double x:Key="SettingCardWrapNoIconThreshold">286</x:Double>
    <x:String x:Key="SettingCardChevronLinkGlyph">&#xE8A7;</x:String>
    <x:String x:Key="SettingCardChevronRightGlyph">&#xE76C;</x:String>

    <wux:Thickness x:Key="ToggleSwitchLeftHeaderMargin">0,0,4,0</wux:Thickness>

    <Style x:Key="DefaultSettingCardStyle" TargetType="controls:Setting">
        <Style.Setters>
            <wux:Setter Property="Background" Value="{ThemeResource SettingCardBackground}" />
            <wux:Setter Property="Foreground" Value="{ThemeResource SettingCardForeground}" />
            <wux:Setter Property="BorderBrush" Value="{ThemeResource SettingCardBorderBrush}" />
            <wux:Setter Property="BorderThickness" Value="{ThemeResource SettingCardBorderThickness}" />
            <wux:Setter Property="CornerRadius" Value="{ThemeResource ControlCornerRadius}" />
            <wux:Setter Property="MinHeight" Value="{ThemeResource SettingCardMinHeight}" />
            <wux:Setter Property="MinWidth" Value="{ThemeResource SettingCardMinWidth}" />
            <wux:Setter Property="IsTabStop" Value="False" />
            <wux:Setter Property="HorizontalAlignment" Value="Stretch" />
            <wux:Setter Property="HorizontalContentAlignment" Value="Right" />
            <wux:Setter Property="VerticalAlignment" Value="Center" />
            <wux:Setter Property="BackgroundSizing" Value="InnerBorderEdge" />
            <wux:Setter Property="Padding" Value="{ThemeResource SettingCardPadding}" />
            <wux:Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}" />
            <wux:Setter Property="FontWeight" Value="Normal" />
            <wux:Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}" />
            <wux:Setter Property="UseSystemFocusVisuals" Value="{StaticResource UseSystemFocusVisuals}" />
            <wux:Setter Property="FocusVisualMargin" Value="-3" />
            <wux:Setter Property="ActionIcon" Value="{StaticResource SettingCardChevronRightGlyph}" />
            <wux:Setter Property="WrapThreshold" Value="{StaticResource SettingCardWrapThreshold}" />
            <wux:Setter Property="WrapNoIconThreshold" Value="{StaticResource SettingCardWrapNoIconThreshold}" />
            <wux:Setter Property="Template">
                <wux:Setter.Value>
                    <wuxc:ControlTemplate TargetType="controls:Setting">
                        <wuxc:Grid
                            x:Name="PART_RootGrid"
                            MinWidth="{TemplateBinding MinWidth}"
                            MinHeight="{TemplateBinding MinHeight}"
                            MaxWidth="{TemplateBinding MaxWidth}"
                            Padding="{TemplateBinding Padding}"
                            HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalAlignment}"
                            muxc:AnimatedIcon.State="Normal"
                            Background="{TemplateBinding Background}"
                            BackgroundSizing="{TemplateBinding BackgroundSizing}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                            <wuxc:Grid.BackgroundTransition>
                                <wux:BrushTransition Duration="0:0:0.083" />
                            </wuxc:Grid.BackgroundTransition>
                            <wuxc:Grid.RowDefinitions>
                                <wuxc:RowDefinition Height="*" />
                                <wuxc:RowDefinition Height="Auto" />
                            </wuxc:Grid.RowDefinitions>
                            <wuxc:Grid.ColumnDefinitions>
                                <wuxc:ColumnDefinition Width="Auto" MinWidth="{ThemeResource SettingCardLeftIndention}" />
                                <wuxc:ColumnDefinition Width="*" />
                                <wuxc:ColumnDefinition Width="Auto" />
                                <wuxc:ColumnDefinition Width="Auto" />
                            </wuxc:Grid.ColumnDefinitions>

                            <wuxc:Viewbox
                                x:Name="PART_HeaderIconPresenterHolder"
                                MaxWidth="{ThemeResource SettingCardHeaderIconMaxSize}"
                                MaxHeight="{ThemeResource SettingCardHeaderIconMaxSize}"
                                Margin="{ThemeResource SettingCardHeaderIconMargin}"
                                wuxc:Grid.RowSpan="1">
                                <wuxc:ContentPresenter
                                    x:Name="PART_HeaderIconPresenter"
                                    Content="{TemplateBinding Icon}"
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    HighContrastAdjustment="None" />
                            </wuxc:Viewbox>

                            <wuxc:StackPanel
                                x:Name="HeaderPanel"
                                Margin="0,0,24,0"
                                VerticalAlignment="Center"
                                wuxc:Grid.Column="1"
                                Orientation="Vertical">
                                <wuxc:ContentPresenter
                                    x:Name="PART_HeaderPresenter"
                                    HorizontalAlignment="Left"
                                    wuxc:Grid.Column="1"
                                    Content="{TemplateBinding Header}"
                                    HighContrastAdjustment="None"
                                    TextWrapping="Wrap" />

                                <wuxc:ContentPresenter
                                    x:Name="PART_DescriptionPresenter"
                                    HorizontalAlignment="Left"
                                    Content="{TemplateBinding Description}"
                                    FontSize="{ThemeResource SettingCardDescriptionFontSize}"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    TextWrapping="Wrap">
                                    <wuxc:ContentPresenter.Resources>
                                        <wux:Style BasedOn="{StaticResource CaptionTextBlockStyle}" TargetType="TextBlock">
                                            <wux:Style.Setters>
                                                <wux:Setter Property="TextWrapping" Value="Wrap" />
                                            </wux:Style.Setters>
                                        </wux:Style>
                                        <wux:Style BasedOn="{StaticResource TextButtonStyle}" TargetType="HyperlinkButton">
                                            <wux:Style.Setters>
                                                <wux:Setter Property="FontSize" Value="{ThemeResource SettingCardDescriptionFontSize}" />
                                                <wux:Setter Property="Padding" Value="0,0,0,-1" />
                                                <wux:Setter Property="FontWeight" Value="SemiBold" />
                                            </wux:Style.Setters>
                                        </wux:Style>
                                        <wux:Style TargetType="Hyperlink">
                                            <wux:Style.Setters>
                                                <wux:Setter Property="UnderlineStyle" Value="None" />
                                                <wux:Setter Property="TextDecorations" Value="None" />
                                                <wux:Setter Property="FontWeight" Value="SemiBold" />
                                            </wux:Style.Setters>
                                        </wux:Style>
                                    </wuxc:ContentPresenter.Resources>
                                </wuxc:ContentPresenter>
                            </wuxc:StackPanel>

                            <wuxc:ContentPresenter
                                x:Name="PART_ContentPresenter"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                wuxc:Grid.Column="2"
                                Content="{TemplateBinding Content}">
                                <wuxc:ContentPresenter.Resources>
                                    <wux:Style BasedOn="{StaticResource ToggleSwitchSettingStyle}" TargetType="ToggleButton" />
                                </wuxc:ContentPresenter.Resources>
                            </wuxc:ContentPresenter>

                            <wuxc:ContentControl
                                x:Name="PART_ActionIconPresenter"
                                Width="{ThemeResource SettingCardActionButtonWidth}"
                                Height="{ThemeResource SettingCardActionButtonHeight}"
                                Margin="4,0,-8,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                wuxa:AutomationProperties.LocalizedControlType="button"
                                wuxa:AutomationProperties.Name="{TemplateBinding ActionIconToolTip}"
                                wuxc:Grid.Column="3"
                                wuxc:Grid.RowSpan="2"
                                wuxc:ToolTipService.ToolTip="{TemplateBinding ActionIconToolTip}"
                                CornerRadius="{ThemeResource ControlCornerRadius}"
                                FocusVisualMargin="-3"
                                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                HighContrastAdjustment="None"
                                IsTabStop="True"
                                UseSystemFocusVisuals="True"
                                Visibility="Collapsed">
                                <wuxc:Viewbox MaxWidth="{ThemeResource SettingCardActionIconMaxSize}" MaxHeight="{ThemeResource SettingCardActionIconMaxSize}">
                                    <wuxc:ContentPresenter
                                        Content="{TemplateBinding ActionIcon}"
                                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                                        HighContrastAdjustment="None" />
                                </wuxc:Viewbox>
                            </wuxc:ContentControl>

                            <wux:VisualStateManager.VisualStateGroups>
                                <wux:VisualStateGroup x:Name="CommonStates">
                                    <wux:VisualState x:Name="Normal" />
                                    <wux:VisualState x:Name="PointerOver">
                                        <wuxma:Storyboard>
                                            <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="PART_RootGrid" wuxma:Storyboard.TargetProperty="Background">
                                                <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardBackgroundPointerOver}" />
                                            </wuxma:ObjectAnimationUsingKeyFrames>
                                            <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="PART_RootGrid" wuxma:Storyboard.TargetProperty="BorderBrush">
                                                <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardBorderBrushPointerOver}" />
                                            </wuxma:ObjectAnimationUsingKeyFrames>
                                            <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="PART_HeaderPresenter" wuxma:Storyboard.TargetProperty="Foreground">
                                                <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardForegroundPointerOver}" />
                                            </wuxma:ObjectAnimationUsingKeyFrames>
                                            <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="PART_HeaderIconPresenter" wuxma:Storyboard.TargetProperty="Foreground">
                                                <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardForegroundPointerOver}" />
                                            </wuxma:ObjectAnimationUsingKeyFrames>
                                        </wuxma:Storyboard>
                                        <wux:VisualState.Setters>
                                            <wux:Setter Target="PART_RootGrid.(muxc:AnimatedIcon.State)" Value="PointerOver" />
                                        </wux:VisualState.Setters>
                                    </wux:VisualState>
                                    <wux:VisualState x:Name="Pressed">
                                        <wuxma:Storyboard>
                                            <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="PART_RootGrid" wuxma:Storyboard.TargetProperty="Background">
                                                <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardBackgroundPressed}" />
                                            </wuxma:ObjectAnimationUsingKeyFrames>
                                            <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="PART_RootGrid" wuxma:Storyboard.TargetProperty="BorderBrush">
                                                <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardBorderBrushPressed}" />
                                            </wuxma:ObjectAnimationUsingKeyFrames>
                                            <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="PART_HeaderIconPresenter" wuxma:Storyboard.TargetProperty="Foreground">
                                                <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardForegroundPressed}" />
                                            </wuxma:ObjectAnimationUsingKeyFrames>
                                            <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="PART_HeaderPresenter" wuxma:Storyboard.TargetProperty="Foreground">
                                                <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardForegroundPressed}" />
                                            </wuxma:ObjectAnimationUsingKeyFrames>
                                            <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="PART_DescriptionPresenter" wuxma:Storyboard.TargetProperty="Foreground">
                                                <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardForegroundPressed}" />
                                            </wuxma:ObjectAnimationUsingKeyFrames>
                                        </wuxma:Storyboard>
                                        <wux:VisualState.Setters>
                                            <wux:Setter Target="PART_RootGrid.(muxc:AnimatedIcon.State)" Value="Pressed" />
                                        </wux:VisualState.Setters>
                                    </wux:VisualState>
                                    <wux:VisualState x:Name="Disabled">
                                        <wuxma:Storyboard>
                                            <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="PART_ActionIconPresenter" wuxma:Storyboard.TargetProperty="Foreground">
                                                <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardForegroundDisabled}" />
                                            </wuxma:ObjectAnimationUsingKeyFrames>
                                            <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="PART_HeaderIconPresenter" wuxma:Storyboard.TargetProperty="Foreground">
                                                <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardForegroundDisabled}" />
                                            </wuxma:ObjectAnimationUsingKeyFrames>
                                            <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="PART_HeaderPresenter" wuxma:Storyboard.TargetProperty="Foreground">
                                                <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardForegroundDisabled}" />
                                            </wuxma:ObjectAnimationUsingKeyFrames>
                                            <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="PART_DescriptionPresenter" wuxma:Storyboard.TargetProperty="Foreground">
                                                <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardForegroundDisabled}" />
                                            </wuxma:ObjectAnimationUsingKeyFrames>
                                        </wuxma:Storyboard>
                                        <wux:VisualState.Setters>
                                            <!--  DisabledVisual Should be handled by the control, not the animated icon.  -->
                                            <wux:Setter Target="PART_RootGrid.(muxc:AnimatedIcon.State)" Value="Normal" />
                                        </wux:VisualState.Setters>
                                    </wux:VisualState>
                                </wux:VisualStateGroup>
                                <wux:VisualStateGroup x:Name="ContentAlignmentStates">
                                    <wux:VisualState x:Name="Right" />
                                    <wux:VisualState x:Name="Left">
                                        <wux:VisualState.StateTriggers>
                                            <triggers:IsEqualStateTrigger Value="{Binding ContentAlignment, RelativeSource={RelativeSource TemplatedParent}}" To="Left" />
                                        </wux:VisualState.StateTriggers>
                                        <wux:VisualState.Setters>
                                            <wux:Setter Target="PART_HeaderIconPresenterHolder.Visibility" Value="Collapsed" />
                                            <wux:Setter Target="PART_DescriptionPresenter.Visibility" Value="Collapsed" />
                                            <wux:Setter Target="PART_HeaderPresenter.Visibility" Value="Collapsed" />
                                            <wux:Setter Target="PART_ContentPresenter.(Grid.Row)" Value="1" />
                                            <wux:Setter Target="PART_ContentPresenter.(Grid.Column)" Value="1" />
                                            <wux:Setter Target="PART_ContentPresenter.HorizontalAlignment" Value="Left" />
                                        </wux:VisualState.Setters>
                                    </wux:VisualState>
                                    <wux:VisualState x:Name="RightWrapped">
                                        <wux:VisualState.StateTriggers>
                                            <triggers:ControlSizeTrigger
                                                MinWidth="{Binding WrapNoIconThreshold, RelativeSource={RelativeSource TemplatedParent}}"
                                                MaxWidth="{Binding WrapThreshold, RelativeSource={RelativeSource TemplatedParent}}"
                                                TargetElement="{Binding ElementName=PART_RootGrid}" />
                                        </wux:VisualState.StateTriggers>
                                        <wux:VisualState.Setters>
                                            <wux:Setter Target="PART_ContentPresenter.(Grid.Row)" Value="1" />
                                            <wux:Setter Target="PART_ContentPresenter.(Grid.Column)" Value="1" />
                                            <wux:Setter Target="PART_ContentPresenter.HorizontalAlignment" Value="Stretch" />
                                            <wux:Setter Target="PART_ContentPresenter.HorizontalContentAlignment" Value="Left" />
                                            <wux:Setter Target="PART_ContentPresenter.Margin" Value="{ThemeResource SettingCardVerticalHeaderContentSpacing}" />
                                            <wux:Setter Target="HeaderPanel.Margin" Value="0" />
                                        </wux:VisualState.Setters>
                                    </wux:VisualState>
                                    <wux:VisualState x:Name="RightWrappedNoIcon">
                                        <wux:VisualState.StateTriggers>
                                            <triggers:ControlSizeTrigger MaxWidth="{Binding WrapNoIconThreshold, RelativeSource={RelativeSource TemplatedParent}}" TargetElement="{Binding ElementName=PART_RootGrid}" />
                                        </wux:VisualState.StateTriggers>
                                        <wux:VisualState.Setters>
                                            <wux:Setter Target="PART_HeaderIconPresenterHolder.Visibility" Value="Collapsed" />
                                            <wux:Setter Target="PART_ContentPresenter.(Grid.Row)" Value="1" />
                                            <wux:Setter Target="PART_ContentPresenter.(Grid.Column)" Value="1" />
                                            <wux:Setter Target="PART_ContentPresenter.HorizontalAlignment" Value="Stretch" />
                                            <wux:Setter Target="PART_ContentPresenter.HorizontalContentAlignment" Value="Left" />
                                            <wux:Setter Target="PART_ContentPresenter.Margin" Value="{ThemeResource SettingCardVerticalHeaderContentSpacing}" />
                                            <wux:Setter Target="HeaderPanel.Margin" Value="0" />
                                        </wux:VisualState.Setters>
                                    </wux:VisualState>
                                    <wux:VisualState x:Name="Vertical">
                                        <wux:VisualState.StateTriggers>
                                            <triggers:IsEqualStateTrigger Value="{Binding ContentAlignment, RelativeSource={RelativeSource TemplatedParent}}" To="Vertical" />
                                        </wux:VisualState.StateTriggers>
                                        <wux:VisualState.Setters>
                                            <wux:Setter Target="PART_ContentPresenter.(Grid.Row)" Value="1" />
                                            <wux:Setter Target="PART_ContentPresenter.(Grid.Column)" Value="1" />
                                            <wux:Setter Target="PART_ContentPresenter.HorizontalAlignment" Value="Stretch" />
                                            <wux:Setter Target="PART_ContentPresenter.HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource TemplatedParent}}" />
                                            <wux:Setter Target="PART_ContentPresenter.Margin" Value="{ThemeResource SettingCardVerticalHeaderContentSpacing}" />
                                        </wux:VisualState.Setters>
                                    </wux:VisualState>
                                </wux:VisualStateGroup>
                                <wux:VisualStateGroup x:Name="HeaderVisibilityGroup">
                                    <wux:VisualState x:Name="HeaderVisible" />
                                    <wux:VisualState x:Name="HeaderCollapsed">
                                        <wux:VisualState.Setters>
                                            <wux:Setter Target="PART_HeaderPresenter.Visibility" Value="Collapsed" />
                                        </wux:VisualState.Setters>
                                    </wux:VisualState>
                                </wux:VisualStateGroup>
                                <wux:VisualStateGroup x:Name="ActionIconVisibilityGroup">
                                    <wux:VisualState x:Name="ActionIconVisible">
                                        <wux:VisualState.Setters>
                                            <wux:Setter Target="PART_ActionIconPresenter.Visibility" Value="Visible" />
                                        </wux:VisualState.Setters>
                                    </wux:VisualState>
                                    <wux:VisualState x:Name="ActionIconCollapsed" />
                                </wux:VisualStateGroup>
                                <wux:VisualStateGroup x:Name="DescriptionVisibilityGroup">
                                    <wux:VisualState x:Name="DescriptionVisible" />
                                    <wux:VisualState x:Name="DescriptionCollapsed">
                                        <wux:VisualState.Setters>
                                            <wux:Setter Target="PART_DescriptionPresenter.Visibility" Value="Collapsed" />
                                        </wux:VisualState.Setters>
                                    </wux:VisualState>
                                </wux:VisualStateGroup>
                            </wux:VisualStateManager.VisualStateGroups>
                        </wuxc:Grid>
                    </wuxc:ControlTemplate>
                </wux:Setter.Value>
            </wux:Setter>
        </Style.Setters>
    </Style>

    <Style x:Key="DefaultSettingExpanderItemStyle" TargetType="controls:Setting">
        <Style.Setters>
            <wux:Setter Property="Background" Value="{ThemeResource SystemControlTransparentBrush}" />
            <wux:Setter Property="BorderThickness" Value="{ThemeResource SettingExpanderItemBorderThickness}" />
            <wux:Setter Property="MinHeight" Value="{StaticResource ExpanderMinHeight}" />
            <wux:Setter Property="Padding" Value="{ThemeResource SettingExpanderItemPadding}" />
            <wux:Setter Property="WrapThreshold" Value="{StaticResource SettingExpanderItemWrapThreshold}" />
            <wux:Setter Property="WrapNoIconThreshold" Value="{StaticResource SettingExpanderItemWrapNoIconThreshold}" />
            <wux:Setter Property="CornerRadius" Value="0" />
        </Style.Setters>
    </Style>

    <Style
        x:Key="ClickableSettingExpanderItemStyle"
        BasedOn="{StaticResource DefaultSettingExpanderItemStyle}"
        TargetType="controls:Setting">
        <Style.Setters>
            <wux:Setter Property="Padding" Value="{ThemeResource ClickableSettingExpanderItemPadding}" />
        </Style.Setters>
    </Style>

    <Style x:Key="ListViewItemContentSettingStyle" TargetType="controls:Setting">
        <wux:Setter Property="Background" Value="{ThemeResource SystemControlTransparentBrush}" />
        <wux:Setter Property="BorderThickness" Value="0" />
        <wux:Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>

    <Style x:Key="ListViewItemSettingStyle" TargetType="SelectorItem">
        <wux:Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}" />
        <wux:Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}" />
        <wux:Setter Property="Background" Value="{ThemeResource SettingCardBackground}" />
        <wux:Setter Property="Foreground" Value="{ThemeResource SettingCardForeground}" />
        <wux:Setter Property="BorderBrush" Value="{ThemeResource SettingCardBorderBrush}" />
        <wux:Setter Property="BorderThickness" Value="{ThemeResource SettingCardBorderThickness}" />
        <wux:Setter Property="CornerRadius" Value="{ThemeResource ControlCornerRadius}" />
        <wux:Setter Property="TabNavigation" Value="Local" />
        <wux:Setter Property="IsHoldingEnabled" Value="True" />
        <wux:Setter Property="Padding" Value="0" />
        <wux:Setter Property="Margin" Value="0" />
        <wux:Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <wux:Setter Property="VerticalContentAlignment" Value="Center" />
        <wux:Setter Property="MinWidth" Value="{ThemeResource SettingCardMinWidth}" />
        <wux:Setter Property="MinHeight" Value="{ThemeResource SettingCardMinHeight}" />
        <wux:Setter Property="AllowDrop" Value="False" />
        <wux:Setter Property="UseSystemFocusVisuals" Value="True" />
        <wux:Setter Property="FocusVisualMargin" Value="1" />
        <wux:Setter Property="FocusVisualPrimaryBrush" Value="{ThemeResource ListViewItemFocusVisualPrimaryBrush}" />
        <wux:Setter Property="FocusVisualPrimaryThickness" Value="2" />
        <wux:Setter Property="FocusVisualSecondaryBrush" Value="{ThemeResource ListViewItemFocusVisualSecondaryBrush}" />
        <wux:Setter Property="FocusVisualSecondaryThickness" Value="1" />
        <wux:Setter Property="Template">
            <wux:Setter.Value>
                <wuxc:ControlTemplate TargetType="wuxcp:SelectorItem">
                    <wuxc:Grid
                        x:Name="ContentBorder"
                        wuxc:Control.IsTemplateFocusTarget="True"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        FocusVisualMargin="{TemplateBinding FocusVisualMargin}"
                        RenderTransformOrigin="0.5,0.5">
                        <wuxc:Grid.BackgroundTransition>
                            <wux:BrushTransition Duration="0:0:0.083" />
                        </wuxc:Grid.BackgroundTransition>
                        <wuxc:Grid.RenderTransform>
                            <wuxm:TranslateTransform x:Name="ContentPresenterTranslateTransform" />
                        </wuxc:Grid.RenderTransform>
                        <wuxc:Grid x:Name="PressedBackgroundGrid">
                            <wuxc:Grid.RowDefinitions>
                                <wuxc:RowDefinition Height="0.85*" />
                                <wuxc:RowDefinition Height="*" />
                                <wuxc:RowDefinition Height="0.85*" />
                            </wuxc:Grid.RowDefinitions>
                            <wuxs:Rectangle
                                x:Name="PressedBackground"
                                Grid.Row="1"
                                Width="3.5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Stretch"
                                Fill="{ThemeResource ListViewItemSelectionIndicatorBrush}"
                                Opacity="0"
                                RadiusX="1.5"
                                RadiusY="1.5"
                                RenderTransformOrigin="0.5,0.5">
                                <wuxs:Rectangle.RenderTransform>
                                    <wuxm:ScaleTransform x:Name="PillTransform" ScaleY="0.625" />
                                </wuxs:Rectangle.RenderTransform>
                            </wuxs:Rectangle>
                        </wuxc:Grid>
                        <wuxc:ContentPresenter
                            x:Name="ContentPresenter"
                            Margin="{TemplateBinding Padding}"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            Content="{TemplateBinding Content}"
                            ContentTemplate="{TemplateBinding ContentTemplate}"
                            ContentTransitions="{TemplateBinding ContentTransitions}" />
                        <wux:VisualStateManager.VisualStateGroups>
                            <wux:VisualStateGroup x:Name="CommonStates">
                                <wux:VisualStateGroup.Transitions>
                                    <wux:VisualTransition To="Selected">
                                        <wuxma:Storyboard>
                                            <wuxma:DoubleAnimationUsingKeyFrames wuxma:Storyboard.TargetName="PillTransform" wuxma:Storyboard.TargetProperty="ScaleY">
                                                <wuxma:SplineDoubleKeyFrame
                                                    KeySpline="0,0,0,1"
                                                    KeyTime="00:00:00.167"
                                                    Value="1" />
                                            </wuxma:DoubleAnimationUsingKeyFrames>
                                        </wuxma:Storyboard>
                                    </wux:VisualTransition>
                                    <wux:VisualTransition To="PointerOverSelected">
                                        <wuxma:Storyboard>
                                            <wuxma:DoubleAnimationUsingKeyFrames wuxma:Storyboard.TargetName="PillTransform" wuxma:Storyboard.TargetProperty="ScaleY">
                                                <wuxma:SplineDoubleKeyFrame
                                                    KeySpline="0,0,0,1"
                                                    KeyTime="00:00:00.167"
                                                    Value="1" />
                                            </wuxma:DoubleAnimationUsingKeyFrames>
                                        </wuxma:Storyboard>
                                    </wux:VisualTransition>
                                    <wux:VisualTransition To="PressedSelected">
                                        <wuxma:Storyboard>
                                            <wuxma:DoubleAnimationUsingKeyFrames wuxma:Storyboard.TargetName="PillTransform" wuxma:Storyboard.TargetProperty="ScaleY">
                                                <wuxma:SplineDoubleKeyFrame
                                                    KeySpline="1,0,0,0"
                                                    KeyTime="00:00:00.167"
                                                    Value="0.625" />
                                            </wuxma:DoubleAnimationUsingKeyFrames>
                                        </wuxma:Storyboard>
                                    </wux:VisualTransition>
                                </wux:VisualStateGroup.Transitions>
                                <wux:VisualState x:Name="Normal" />
                                <wux:VisualState x:Name="PointerOver">
                                    <wuxma:Storyboard>
                                        <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="ContentBorder" wuxma:Storyboard.TargetProperty="Background">
                                            <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardBackgroundPointerOver}" />
                                        </wuxma:ObjectAnimationUsingKeyFrames>
                                        <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="ContentBorder" wuxma:Storyboard.TargetProperty="BorderBrush">
                                            <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardBorderBrushPointerOver}" />
                                        </wuxma:ObjectAnimationUsingKeyFrames>
                                        <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="ContentPresenter" wuxma:Storyboard.TargetProperty="Foreground">
                                            <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardForegroundPointerOver}" />
                                        </wuxma:ObjectAnimationUsingKeyFrames>
                                    </wuxma:Storyboard>
                                </wux:VisualState>
                                <wux:VisualState x:Name="Pressed">
                                    <wuxma:Storyboard>
                                        <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="ContentBorder" wuxma:Storyboard.TargetProperty="Background">
                                            <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardBackgroundPressed}" />
                                        </wuxma:ObjectAnimationUsingKeyFrames>
                                        <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="ContentBorder" wuxma:Storyboard.TargetProperty="BorderBrush">
                                            <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardBorderBrushPressed}" />
                                        </wuxma:ObjectAnimationUsingKeyFrames>
                                        <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="ContentPresenter" wuxma:Storyboard.TargetProperty="Foreground">
                                            <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardForegroundPressed}" />
                                        </wuxma:ObjectAnimationUsingKeyFrames>
                                    </wuxma:Storyboard>
                                </wux:VisualState>
                                <wux:VisualState x:Name="Selected">
                                    <wux:VisualState.Setters>
                                        <wux:Setter Target="PillTransform.ScaleY" Value="1" />
                                        <wux:Setter Target="PressedBackground.Opacity" Value="1" />
                                    </wux:VisualState.Setters>
                                </wux:VisualState>
                                <wux:VisualState x:Name="PointerOverSelected">
                                    <wux:VisualState.Setters>
                                        <wux:Setter Target="PillTransform.ScaleY" Value="1" />
                                        <wux:Setter Target="PressedBackground.Opacity" Value="1" />
                                    </wux:VisualState.Setters>
                                    <wuxma:Storyboard>
                                        <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="ContentBorder" wuxma:Storyboard.TargetProperty="Background">
                                            <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardBackgroundPointerOver}" />
                                        </wuxma:ObjectAnimationUsingKeyFrames>
                                        <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="ContentBorder" wuxma:Storyboard.TargetProperty="BorderBrush">
                                            <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardBorderBrushPointerOver}" />
                                        </wuxma:ObjectAnimationUsingKeyFrames>
                                        <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="ContentPresenter" wuxma:Storyboard.TargetProperty="Foreground">
                                            <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardForegroundPointerOver}" />
                                        </wuxma:ObjectAnimationUsingKeyFrames>
                                    </wuxma:Storyboard>
                                </wux:VisualState>
                                <wux:VisualState x:Name="PressedSelected">
                                    <wux:VisualState.Setters>
                                        <wux:Setter Target="PillTransform.ScaleY" Value="1" />
                                        <wux:Setter Target="PressedBackground.Opacity" Value="1" />
                                    </wux:VisualState.Setters>
                                    <wuxma:Storyboard>
                                        <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="ContentBorder" wuxma:Storyboard.TargetProperty="Background">
                                            <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardBackgroundPressed}" />
                                        </wuxma:ObjectAnimationUsingKeyFrames>
                                        <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="ContentBorder" wuxma:Storyboard.TargetProperty="BorderBrush">
                                            <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardBorderBrushPressed}" />
                                        </wuxma:ObjectAnimationUsingKeyFrames>
                                        <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="ContentPresenter" wuxma:Storyboard.TargetProperty="Foreground">
                                            <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardForegroundPressed}" />
                                        </wuxma:ObjectAnimationUsingKeyFrames>
                                    </wuxma:Storyboard>
                                </wux:VisualState>
                            </wux:VisualStateGroup>
                            <wux:VisualStateGroup x:Name="DisabledStates">
                                <wux:VisualState x:Name="Enabled" />
                                <wux:VisualState x:Name="Disabled">
                                    <wuxma:Storyboard>
                                        <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="ContentPresenter" wuxma:Storyboard.TargetProperty="Foreground">
                                            <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SettingCardForegroundDisabled}" />
                                        </wuxma:ObjectAnimationUsingKeyFrames>
                                    </wuxma:Storyboard>
                                </wux:VisualState>
                            </wux:VisualStateGroup>
                        </wux:VisualStateManager.VisualStateGroups>
                    </wuxc:Grid>
                </wuxc:ControlTemplate>
            </wux:Setter.Value>
        </wux:Setter>
    </Style>

    <!--  This style overrides the default style so that all ToggleSwitches are right aligned, with the label on the left  -->
    <Style x:Key="ToggleSwitchSettingStyle" TargetType="ToggleSwitch">
        <wux:Setter Property="MinWidth" Value="0" />
        <wux:Setter Property="VerticalAlignment" Value="Center" />
        <wux:Setter Property="VerticalContentAlignment" Value="Center" />
        <wux:Setter Property="HorizontalAlignment" Value="Right" />
        <wux:Setter Property="HorizontalContentAlignment" Value="Right" />
        <wux:Setter Property="ManipulationMode" Value="System,TranslateX" />
        <wux:Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}" />
        <wux:Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}" />
        <wux:Setter Property="Foreground" Value="{ThemeResource ToggleSwitchContentForeground}" />
        <wux:Setter Property="UseSystemFocusVisuals" Value="{StaticResource UseSystemFocusVisuals}" />
        <wux:Setter Property="FocusVisualMargin" Value="-7,-3,-7,-3" />
        <wux:Setter Property="Template">
            <wux:Setter.Value>
                <wuxc:ControlTemplate TargetType="wuxc:ToggleSwitch">
                    <wuxc:Grid
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                        <wuxc:Grid.BackgroundTransition>
                            <wux:BrushTransition Duration="0:0:0.083" />
                        </wuxc:Grid.BackgroundTransition>

                        <wuxc:Grid.ColumnDefinitions>
                            <wuxc:ColumnDefinition Width="Auto" />
                            <wuxc:ColumnDefinition Width="*" />
                        </wuxc:Grid.ColumnDefinitions>

                        <wuxc:ContentPresenter
                            x:Name="HeaderContentPresenter"
                            Margin="{ThemeResource ToggleSwitchLeftHeaderMargin}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            wuxc:Grid.Column="0"
                            x:DeferLoadStrategy="Lazy"
                            wuxa:AutomationProperties.AccessibilityView="Raw"
                            Content="{TemplateBinding Header}"
                            ContentTemplate="{TemplateBinding HeaderTemplate}"
                            Foreground="{ThemeResource ToggleSwitchHeaderForeground}"
                            IsHitTestVisible="False"
                            TextWrapping="Wrap"
                            Visibility="Collapsed" />

                        <wuxc:Grid
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            wuxc:Grid.Column="1">
                            <wuxc:Grid.RowDefinitions>
                                <wuxc:RowDefinition Height="{ThemeResource ToggleSwitchPreContentMargin}" />
                                <wuxc:RowDefinition Height="Auto" />
                                <wuxc:RowDefinition Height="{ThemeResource ToggleSwitchPostContentMargin}" />
                            </wuxc:Grid.RowDefinitions>

                            <wuxc:Grid.ColumnDefinitions>
                                <wuxc:ColumnDefinition Width="Auto" />
                                <wuxc:ColumnDefinition Width="12" MaxWidth="12" />
                                <wuxc:ColumnDefinition Width="Auto" />
                            </wuxc:Grid.ColumnDefinitions>

                            <wuxc:Grid
                                x:Name="SwitchAreaGrid"
                                Margin="0,5"
                                wuxc:Control.IsTemplateFocusTarget="True"
                                wuxc:Grid.ColumnSpan="3"
                                wuxc:Grid.RowSpan="3"
                                Background="{ThemeResource ToggleSwitchContainerBackground}"
                                CornerRadius="{TemplateBinding CornerRadius}" />

                            <wuxc:ContentPresenter
                                x:Name="OffContentPresenter"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                wuxc:Grid.Column="0"
                                wuxc:Grid.RowSpan="3"
                                wuxa:AutomationProperties.AccessibilityView="Raw"
                                Content="{TemplateBinding OffContent}"
                                ContentTemplate="{TemplateBinding OffContentTemplate}"
                                Foreground="{TemplateBinding Foreground}"
                                IsHitTestVisible="False"
                                Opacity="0" />

                            <wuxc:ContentPresenter
                                x:Name="OnContentPresenter"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                wuxc:Grid.Column="0"
                                wuxc:Grid.RowSpan="3"
                                wuxa:AutomationProperties.AccessibilityView="Raw"
                                Content="{TemplateBinding OnContent}"
                                ContentTemplate="{TemplateBinding OnContentTemplate}"
                                Foreground="{TemplateBinding Foreground}"
                                IsHitTestVisible="False"
                                Opacity="0" />

                            <wuxs:Rectangle
                                x:Name="OuterBorder"
                                wuxc:Grid.Row="1"
                                wuxc:Grid.Column="2"
                                Width="40"
                                Height="20"
                                Fill="{ThemeResource ToggleSwitchFillOff}"
                                RadiusX="10"
                                RadiusY="10"
                                Stroke="{ThemeResource ToggleSwitchStrokeOff}"
                                StrokeThickness="{ThemeResource ToggleSwitchOuterBorderStrokeThickness}" />

                            <wuxs:Rectangle
                                x:Name="SwitchKnobBounds"
                                wuxc:Grid.Row="1"
                                wuxc:Grid.Column="2"
                                Width="40"
                                Height="20"
                                Fill="{ThemeResource ToggleSwitchFillOn}"
                                Opacity="0"
                                RadiusX="10"
                                RadiusY="10"
                                Stroke="{ThemeResource ToggleSwitchStrokeOn}"
                                StrokeThickness="{ThemeResource ToggleSwitchOnStrokeThickness}" />

                            <wuxc:Grid
                                x:Name="SwitchKnob"
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Left"
                                wuxc:Grid.Column="2"
                                wuxc:Grid.Row="1">
                                <wuxc:Grid.RenderTransform>
                                    <wuxm:TranslateTransform x:Name="KnobTranslateTransform" />
                                </wuxc:Grid.RenderTransform>

                                <wuxc:Border
                                    x:Name="SwitchKnobOn"
                                    wuxc:Grid.Column="2"
                                    Width="12"
                                    Height="12"
                                    Margin="0,0,1,0"
                                    HorizontalAlignment="Center"
                                    Background="{ThemeResource ToggleSwitchKnobFillOn}"
                                    BackgroundSizing="OuterBorderEdge"
                                    BorderBrush="{ThemeResource ToggleSwitchKnobStrokeOn}"
                                    CornerRadius="7"
                                    Opacity="0"
                                    RenderTransformOrigin="0.5, 0.5">
                                    <wuxc:Border.RenderTransform>
                                        <wuxm:CompositeTransform />
                                    </wuxc:Border.RenderTransform>
                                </wuxc:Border>

                                <wuxs:Rectangle
                                    x:Name="SwitchKnobOff"
                                    wuxc:Grid.Column="2"
                                    Width="12"
                                    Height="12"
                                    Margin="-1,0,0,0"
                                    HorizontalAlignment="Center"
                                    Fill="{ThemeResource ToggleSwitchKnobFillOff}"
                                    RadiusX="7"
                                    RadiusY="7"
                                    RenderTransformOrigin="0.5, 0.5">
                                    <wuxs:Rectangle.RenderTransform>
                                        <wuxm:CompositeTransform />
                                    </wuxs:Rectangle.RenderTransform>
                                </wuxs:Rectangle>
                            </wuxc:Grid>

                            <wuxcp:Thumb
                                x:Name="SwitchThumb"
                                wuxc:Grid.RowSpan="3"
                                wuxc:Grid.ColumnSpan="3"
                                wuxa:AutomationProperties.AccessibilityView="Raw">
                                <wuxcp:Thumb.Template>
                                    <wuxc:ControlTemplate TargetType="wuxcp:Thumb">
                                        <wuxs:Rectangle Fill="{ThemeResource SystemControlTransparentBrush}" />
                                    </wuxc:ControlTemplate>
                                </wuxcp:Thumb.Template>
                            </wuxcp:Thumb>
                        </wuxc:Grid>

                        <wux:VisualStateManager.VisualStateGroups>
                            <wux:VisualStateGroup x:Name="CommonStates">
                                <wux:VisualState x:Name="Normal">
                                    <wuxma:Storyboard>
                                        <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="OuterBorder" wuxma:Storyboard.TargetProperty="Stroke">
                                            <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ToggleSwitchStrokeOff}" />
                                        </wuxma:ObjectAnimationUsingKeyFrames>
                                        <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="OuterBorder" wuxma:Storyboard.TargetProperty="Fill">
                                            <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ToggleSwitchFillOff}" />
                                        </wuxma:ObjectAnimationUsingKeyFrames>
                                        <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="SwitchKnobOff" wuxma:Storyboard.TargetProperty="Fill">
                                            <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ToggleSwitchKnobFillOff}" />
                                        </wuxma:ObjectAnimationUsingKeyFrames>
                                        <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="SwitchKnobOn" wuxma:Storyboard.TargetProperty="Background">
                                            <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ToggleSwitchKnobFillOn}" />
                                        </wuxma:ObjectAnimationUsingKeyFrames>
                                        <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="SwitchKnobBounds" wuxma:Storyboard.TargetProperty="Fill">
                                            <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ToggleSwitchFillOn}" />
                                        </wuxma:ObjectAnimationUsingKeyFrames>
                                        <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="SwitchKnobBounds" wuxma:Storyboard.TargetProperty="Stroke">
                                            <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ToggleSwitchStrokeOn}" />
                                        </wuxma:ObjectAnimationUsingKeyFrames>
                                        <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="SwitchAreaGrid" wuxma:Storyboard.TargetProperty="Background">
                                            <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ToggleSwitchContainerBackground}" />
                                        </wuxma:ObjectAnimationUsingKeyFrames>
                                        <wuxma:DoubleAnimationUsingKeyFrames
                                            EnableDependentAnimation="True"
                                            wuxma:Storyboard.TargetName="SwitchKnobOn"
                                            wuxma:Storyboard.TargetProperty="Width">
                                            <wuxma:SplineDoubleKeyFrame
                                                KeySpline="{StaticResource ControlFastOutSlowInKeySpline}"
                                                KeyTime="{StaticResource ControlFasterAnimationDuration}"
                                                Value="12" />
                                        </wuxma:DoubleAnimationUsingKeyFrames>
                                        <wuxma:DoubleAnimationUsingKeyFrames
                                            EnableDependentAnimation="True"
                                            wuxma:Storyboard.TargetName="SwitchKnobOn"
                                            wuxma:Storyboard.TargetProperty="Height">
                                            <wuxma:SplineDoubleKeyFrame
                                                KeySpline="{StaticResource ControlFastOutSlowInKeySpline}"
                                                KeyTime="{StaticResource ControlFasterAnimationDuration}"
                                                Value="12" />
                                        </wuxma:DoubleAnimationUsingKeyFrames>
                                        <wuxma:DoubleAnimationUsingKeyFrames
                                            EnableDependentAnimation="True"
                                            wuxma:Storyboard.TargetName="SwitchKnobOff"
                                            wuxma:Storyboard.TargetProperty="Width">
                                            <wuxma:SplineDoubleKeyFrame
                                                KeySpline="{StaticResource ControlFastOutSlowInKeySpline}"
                                                KeyTime="{StaticResource ControlFasterAnimationDuration}"
                                                Value="12" />
                                        </wuxma:DoubleAnimationUsingKeyFrames>
                                        <wuxma:DoubleAnimationUsingKeyFrames
                                            EnableDependentAnimation="True"
                                            wuxma:Storyboard.TargetName="SwitchKnobOff"
                                            wuxma:Storyboard.TargetProperty="Height">
                                            <wuxma:SplineDoubleKeyFrame
                                                KeySpline="{StaticResource ControlFastOutSlowInKeySpline}"
                                                KeyTime="{StaticResource ControlFasterAnimationDuration}"
                                                Value="12" />
                                        </wuxma:DoubleAnimationUsingKeyFrames>
                                    </wuxma:Storyboard>
                                </wux:VisualState>

                                <wux:VisualState x:Name="PointerOver">
                                    <wuxma:Storyboard>
                                        <wuxma:ColorAnimationUsingKeyFrames wuxma:Storyboard.TargetName="OuterBorder" wuxma:Storyboard.TargetProperty="(Shape.Stroke).(SolidColorBrush.Color)">
                                            <wuxma:LinearColorKeyFrame KeyTime="{StaticResource ControlFasterAnimationDuration}" Value="{ThemeResource ToggleSwitchStrokeOffPointerOver}" />
                                        </wuxma:ColorAnimationUsingKeyFrames>
                                        <wuxma:ColorAnimationUsingKeyFrames wuxma:Storyboard.TargetName="OuterBorder" wuxma:Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)">
                                            <wuxma:LinearColorKeyFrame KeyTime="{StaticResource ControlFasterAnimationDuration}" Value="{ThemeResource ToggleSwitchFillOffPointerOver}" />
                                        </wuxma:ColorAnimationUsingKeyFrames>
                                        <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="SwitchKnobOff" wuxma:Storyboard.TargetProperty="Fill">
                                            <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ToggleSwitchKnobFillOffPointerOver}" />
                                        </wuxma:ObjectAnimationUsingKeyFrames>
                                        <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="SwitchKnobOn" wuxma:Storyboard.TargetProperty="Background">
                                            <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ToggleSwitchKnobFillOnPointerOver}" />
                                        </wuxma:ObjectAnimationUsingKeyFrames>
                                        <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="SwitchKnobBounds" wuxma:Storyboard.TargetProperty="Fill">
                                            <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ToggleSwitchFillOnPointerOver}" />
                                        </wuxma:ObjectAnimationUsingKeyFrames>
                                        <wuxma:ObjectAnimationUsingKeyFrames wuxma:Storyboard.TargetName="SwitchKnobBounds" wuxma:Storyboard.TargetProperty="Stroke">
                                            <wuxma:DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ToggleSwitchStrokeOnPointerOver}" />
                                        </wuxma:ObjectAnimationUsingKeyFrames>
                                        <wuxma:ColorAnimationUsingKeyFrames wuxma:Storyboard.TargetName="SwitchAreaGrid" wuxma:Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)">
                                            <wuxma:LinearColorKeyFrame KeyTime="{StaticResource ControlFasterAnimationDuration}" Value="{ThemeResource ToggleSwitchContainerBackgroundPointerOver}" />
                                        </wuxma:ColorAnimationUsingKeyFrames>
                                        <wuxma:DoubleAnimationUsingKeyFrames
                                            EnableDependentAnimation="True"
                                            wuxma:Storyboard.TargetName="SwitchKnobOn"
                                            wuxma:Storyboard.TargetProperty="Width">
                                            <wuxma:SplineDoubleKeyFrame
                                                KeySpline="{StaticResource ControlFastOutSlowInKeySpline}"
                                                KeyTime="{StaticResource ControlFasterAnimationDuration}"
                                                Value="14" />
                                        </wuxma:DoubleAnimationUsingKeyFrames>
                                        <wuxma:DoubleAnimationUsingKeyFrames
                                            EnableDependentAnimation="True"
                                            wuxma:Storyboard.TargetName="SwitchKnobOn"
                                            wuxma:Storyboard.TargetProperty="Height">
                                            <wuxma:SplineDoubleKeyFrame
                                                KeySpline="{StaticResource ControlFastOutSlowInKeySpline}"
                                                KeyTime="{StaticResource ControlFasterAnimationDuration}"
                                                Value="14" />
                                        </wuxma:DoubleAnimationUsingKeyFrames>
                                        <wuxma:DoubleAnimationUsingKeyFrames
                                            EnableDependentAnimation="True"
                                            wuxma:Storyboard.TargetName="SwitchKnobOff"
                                            wuxma:Storyboard.TargetProperty="Width">
                                            <wuxma:SplineDoubleKeyFrame
                                                KeySpline="{StaticResource ControlFastOutSlowInKeySpline}"
                                                KeyTime="{StaticResource ControlFasterAnimationDuration}"
                                                Value="14" />
                                        </wuxma:DoubleAnimationUsingKeyFrames>
                                        <wuxma:DoubleAnimationUsingKeyFrames
                                            EnableDependentAnimation="True"
                                            wuxma:Storyboard.TargetName="SwitchKnobOff"
                                            wuxma:Storyboard.TargetProperty="Height">
                                            <wuxma:SplineDoubleKeyFrame
                                                KeySpline="{StaticResource ControlFastOutSlowInKeySpline}"
                                                KeyTime="{StaticResource ControlFasterAnimationDuration}"
                                                Value="14" />
                                        </wuxma:DoubleAnimationUsingKeyFrames>
                                    </wuxma:Storyboard>
                                </wux:VisualState>

                                <wux:VisualState x:Name="Pressed">
                                    <wux:VisualState.Setters>
                                        <wux:Setter Target="SwitchKnobOn.Margin" Value="0,0,3,0" />
                                        <wux:Setter Target="SwitchKnobOff.Margin" Value="3,0,0,0" />
                                        <wux:Setter Target="SwitchKnobOn.HorizontalAlignment" Value="Right" />
                                        <wux:Setter Target="SwitchKnobOff.HorizontalAlignment" Value="Left" />
                                    </wux:VisualState.Setters>
                                    <wuxma:Storyboard>
                                        <wuxma:ColorAnimationUsingKeyFrames wuxma:Storyboard.TargetName="OuterBorder" wuxma:Storyboard.TargetProperty="(Shape.Stroke).(SolidColorBrush.Color)">
