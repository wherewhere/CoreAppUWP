<wux:Application
    x:Class="CoreAppUWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wux="using:Windows.UI.Xaml"
    xmlns:wuxm="using:Windows.UI.Xaml.Media">
    <wux:Application.Resources>
        <wux:ResourceDictionary>
            <wux:ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!--  Add resource dictionaries here  -->
                <wux:ResourceDictionary Source="ms-appx:///Themes/CustomStyles.xaml" />
            </wux:ResourceDictionary.MergedDictionaries>
            <!--  Other app resources here  -->

            <!--  Breakpoints  -->
            <x:Double x:Key="Breakpoint640Plus">641</x:Double>

            <!--  L-Pattern Overwriting resources  -->
            <wux:Thickness x:Key="NavigationViewContentMargin">0,48,0,0</wux:Thickness>
            <wux:Thickness x:Key="NavigationViewContentGridBorderThickness">1,1,0,0</wux:Thickness>
            <wux:CornerRadius x:Key="NavigationViewContentGridCornerRadius">8,0,0,0</wux:CornerRadius>
            <wux:Thickness x:Key="NavigationViewHeaderMargin">56,34,0,0</wux:Thickness>

            <wuxm:FontFamily x:Key="SymbolThemeFontFamily">Segoe Fluent Icons,Segoe MDL2 Assets,Segoe UI Symbol</wuxm:FontFamily>
        </wux:ResourceDictionary>
    </wux:Application.Resources>
</wux:Application>
